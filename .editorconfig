root = true

[*]
# тип відступів
indent_style = tab
# розмір відступів
indent_size = tab
# символ закінчення рядка
end_of_line = lf
# кодування файлів
charset = utf-8
# очищати кінець рядка від пробілів
trim_trailing_whitespace = true
# додати пустий рядок в кінці файлу
insert_final_newline = true
# максимальна довжина рядка (80 - оптимально для мерження)
max_line_length = 80
# кількість символів відображення табулятора
tab_width = 2

## Для IDEA
# постійно додавати {}
ij_any_if_brace_force = always
# фігурна дужка в кінці рядка
ij_any_block_brace_style = end_of_line
# чи додавати пробіли в дужках на початку і в кінці 
ij_any_spaces_within_brackets = false
# додавання пробілу після коми 
ij_any_space_after_comma = true
# Знак склеювання рядків і умовних конструкцій в новому рядку
ij_any_binary_operation_sign_on_next_line = true
# завжди використання подвійних лапок 
ij_javascript_force_quote_style = true
# не переносили else на новий рядок 
ij_any_else_on_new_line = false

ij_any_align_multiline_parameters_in_calls = true
ij_any_method_parameters_wrap = on_every_item
ij_any_call_parameters_wrap = normal

ij_any_for_statement_wrap = normal
ij_any_wrap_long_lines = true
ij_wrap_on_typing = true

ij_any_align_multiline_throws_list = true
ij_any_throws_list_wrap = on_every_item
ij_any_align_throws_keyword = true

ij_java_multi_catch_types_wrap = on_every_item

[{*.xml,*.html}]
# вирівнювання атрибутів
ij_xml_attribute_wrap = split_into_lines

ij_xml_align_attributes = true
